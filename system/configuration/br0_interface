auto br0
iface br0 inet static
        address 192.168.0.115
        netmask 255.255.255.0
        gateway 192.168.0.1
        network 192.168.0.1
        broadcast 192.168.0.255
        bridge_ports enp2s0
        bridge_stp off
        bridge_fd 0
        bridge_maxwait 0
        dns-nameservers 1.1.1.1 1.0.0.1